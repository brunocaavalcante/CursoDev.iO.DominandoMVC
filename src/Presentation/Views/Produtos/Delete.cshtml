@model Presentation.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Exclusão do Produto: " + Model.Nome;
}


<h5>Voçê tem certeza disso?</h5><br>
<h4 style="padding-top:50px">@ViewData["Title"]</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width:400px;height:428px" />
    </div>
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Imagem)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Imagem)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)               
            </dt>
            <dd class="col-sm-10">
                @Model.Valor.ToString("C")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fornecedor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fornecedor.Documento)
            </dd>
        </dl>
    </div>
</div><br />
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
</form>

