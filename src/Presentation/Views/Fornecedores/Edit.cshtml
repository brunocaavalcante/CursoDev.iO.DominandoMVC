@model Presentation.ViewModels.FornecedorViewModel

@{
    ViewData["Title"] = "Editar fornecedor: " ;
}

<h2>Edit</h2>

<h4>Fornecedor</h4>
<hr />

<form asp-action="Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <div class="form-row">

        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Documento" class="control-label"></label>
                <input asp-for="Documento" class="form-control" />
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-6">
            <div class="form-group">
                <label asp-for="TipoFornecedor" class="control-label"></label><br />
                <input type="radio" value="1" asp-for="TipoFornecedor" checked="@((int)Model.TipoFornecedor == 1)" />Pessoa Física<br />
                <input type="radio" value="2" asp-for="TipoFornecedor" checked="@((int)Model.TipoFornecedor == 2)" />Pessoa Jurídica<br />
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                    </label>
                </div>
            </div>
        </div>

    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</form>
<partial name="_DetalhesEndereco"></partial>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
